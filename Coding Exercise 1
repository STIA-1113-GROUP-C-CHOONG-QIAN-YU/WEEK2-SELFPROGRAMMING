package characterString;

public class Addition {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("24 and 45 concatenated: " + 24 + 45);
		System.out.println("24 and 45 added: " + (24+45));
		System.out.println("");
		System.out.println("X: "+25);
		System.out.println("Y: "+(15+50));
		System.out.println("Z: "+300+50);
	}

}

package characterString;

public class Facts {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("We present the following facts for your "+ "extracurricular edification:");
		System.out.println("");
		System.out.println("Letters in the Hawaiian alphabet: 12");
		System.out.println("Dialing code for Antarctica: "+672);
		System.out.println("Year in which Leonardo da Vinci invented "+ "the parachute: "+1515);
		System.out.println("Speed of ketchup: "+ 40 + " km per year");
	}

}

package characterString;

public class Roses {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("Roses are red,\n\tViolets are blue,\n"+"Sugar is sweet,\n\tBut I have\"commitment issues\",\n\t"+"So I'd rather just be friends\n\tAt this point in our "+"relationship.");
		System.out.println("");
		
		System.out.println("\"Thank you all for "+"coming to my home\ntonight,\" he said "+"mysteriouly.");
	}

}

package characterString;

public class Exercise {

	public static void main(String[] args) {
		int x= 10; double y = 5.373123;
		// TODO Auto-generated method stub
		System.out.printf("value of x is %d and value of y is %6.2f%n", x , y);
		System.out.printf("value of x is %d and value of y is %10.3f%n", x , y);	
		System.out.printf("%-10s", "Total:");
		System.out.println("");
		}

}
